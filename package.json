{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "rm -rf .next && pnpm type-check && next dev --turbo",
    "build": "next build",
    "start": "pnpm build && next start",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "npx eslint . --ext js,jsx,ts,tsx --ignore-path .eslintignore --no-debug > eslint-debug.log --fix && turbo lint",
    "format": "npx prettier . --ignore-path .eslintignore --write '(**/*.{tsx,ts,js}|*.{js,cjs})'",
    "test": "jest",
    "test:w": "jest --updateSnapshot && jest --watch",
    "postinstall": "husky install",
    "produce": "git checkout main && git pull origin main && git merge dev && git push && git checkout dev"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.18",
    "@mui/material": "^5.15.18",
    "@mui/styles": "^5.15.18",
    "@reduxjs/toolkit": "^1.9.7",
    "@types/node": "18.14.4",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "axios": "^1.7.2",
    "eslint": "8.35.0",
    "eslint-config-next": "13.2.3",
    "eslint-plugin-jest": "^28.5.0",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-redux": "^8.1.3",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "autoprefixer": "^10.4.19",
    "bufferutil": "^4.0.8",
    "cache": "link:@types/@emotion/cache",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.3.0",
    "next-router-mock": "^0.9.13",
    "postcss": "^8.4.38",
    "prettier": "^2.8.8",
    "sass": "^1.77.2",
    "tailwindcss": "^3.4.3",
    "typescript-eslint": "0.0.1-alpha.0",
    "utf-8-validate": "^6.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(src/**/*.{tsx,ts,js}|*.{tsx,ts,js})": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{!(min).js,json,!(min).css,!(min).scss,md}": [
      "prettier --write"
    ]
  }
}
